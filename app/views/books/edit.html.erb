<h1>Editing Book</h1>


<% if @book.errors.any? %>
<div class="error_explanation">
<h2><%= @book.errors.count %>error(s) prohibited this book from being updated:
</h2>
<% @book.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
<% end %>
</div>

<%= form_with model:@book,local:true do |f| %>

<div class="field">
<label>Title</label>
<div>
<%= f.text_field:title %></div>
</div>

<div class="field">
<label>Body</label>
<div><%= f.text_area:body %></div>
</div>

<div class="update"><%= f.submit' Update Book ' %></div>


<%= link_to "Show","/books/#{@book.id}" %>
|
<%= link_to "Back","/books" %>

<% end %>

