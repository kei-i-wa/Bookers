<body>
  <% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
  <% end %>
  <h1>Books</h1>
  <table>
   <thead>
     <tr>
     <th class="title">Title</th>
     <th class="body">Body</th>
     <th colspan="3"></th>
     </tr>
     </thead>

   <tbody>
       <% @books.each do |book| %>
    <tr>

      <td class="title"><%= book.title %></td>
      <td class="body"><%= book.body %></td>
      <td><%= link_to "Show","/books/#{book.id}" %></td>
      <td><%= link_to "Edit","/books/#{book.id}/edit" %></td>
      <td><%= link_to "Destroy",book_path(book), method: :delete %></td>



    </tr>
    <% end %>

   </tbody>
 </table>

<h2>New book</h2>


<% if @book.errors.any? %>
<div class="error_explanation">
<h2><%= @book.errors.count %>error(s) prohibited this book from being saved:
</h2>
<% @book.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
<% end %>



</div>

<%= form_with model:@book,local:true do |f| %>

<div class="field">
<label>Title</label>
<div>
<%= f.text_field:title %></div>
</div>

<div class="field">
<label>Body</label>
<div><%= f.text_area:body %></div>
</div>

<div><%= f.submit' Create Book ' %></div>

<% end %>
</body>